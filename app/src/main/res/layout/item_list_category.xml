<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:id="@+id/card_music_category"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10"
            android:padding="10dp"
    >
        <LinearLayout
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/list_category_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_image"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:paddingLeft="10dp"
        >
            <TextView
                    android:id="@+id/title_music"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên bài hát"
                    android:textStyle="bold"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:weightSum="10"
                    android:orientation="horizontal"
            >

            <TextView
                    android:id="@+id/compose_music"
                    android:layout_weight="3.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên ca sĩ"
            />
            <TextView
                    android:layout_weight="3.8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="| Ngày:"
            />
            <TextView
                    android:id="@+id/ngay_phat_hanh"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên ca sĩ"
            />
            </LinearLayout>
            <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:gravity="center"
            >
                <TextView
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nghe: "
                />
                <TextView
                        android:id="@+id/text_luotnghe"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lượt nghe"
                />
                <TextView
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="| Thích: "
                />
                <TextView
                        android:layout_weight="2"
                        android:id="@+id/text_luotthich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lượt thích"
                />
                <ImageButton
                    android:id="@+id/btn_favorite_list"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_favorite_border_black"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>